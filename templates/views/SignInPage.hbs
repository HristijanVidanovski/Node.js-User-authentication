    <body>
            {{>header}}
            <form id="form-signIn">
                <div class="container">
                    <h1>Sign in</h1>
                    <p>Please fill in this form to sign in.</p>
                    <hr>
                    <label for="email"><b>Email</b></label>
                    <input type="text" placeholder="Enter Email" name="email" id="signInForm-email" required>
                    <label for="psw"><b>Password</b></label>
                    <input type="password" placeholder="Enter Password" name="psw" id="signInForm-password" required>
                    <div class="g-signin2" data-onsuccess="onSignIn"></div>
                    <p id="Message"></p>
                    <hr>
                    <p><a href="forgotPasswordEmail">Forgot password?</a></p>
                    <button type="submit" class="registerbtn">Sign in</button>
                    <div class="container signin">
                        <p> <a href="SignUpPage">Sign Up</a>.</p>
                    </div>
                </div>
            </form>
    <script  src="/js/SignIn.js"></script>   
    <meta name="google-signin-client_id" content="143381467912-9mgbakvdnvmbl7535cj3i7hdv7dcq7of.apps.googleusercontent.com">   
